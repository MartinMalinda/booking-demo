{{#basic-dropdown as |dropdown|}}
  <input type="text"
  data-ebd-id="{{dropdown.uniqueId}}-trigger"
  class="datepicker-demo-input form-control {{inputClass}}"
  onclick={{dropdown.actions.toggle}}
  value={{if selected (moment-format selected 'MM/DD/YYYY')}}
  >

  {{#dropdown.content class="datepicker-demo-dropdown"}}
    {{#power-calendar class="demo-calendar-small"
      center=center
      onCenterChange=(action (mut center) value="date")
      selected=selected
      onSelect=onSelect as |calendar|}}
      {{calendar.nav}}
      {{calendar.days}}
    {{/power-calendar}}
  {{/dropdown.content}}
{{/basic-dropdown}}